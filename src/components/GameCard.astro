---
import { Image } from "astro:assets"
import type { Game } from "@/constants/games"

interface Props {
    game: Game
    imageMap: Record<string, any>
}

const { game } = Astro.props

import imageSrc from "@/images/memory.png"
console.log(game)
---

<a href={game.path}>
    <article>
        <Image src={imageSrc} alt={`${game.title} preview`} width={100} />
        <h2>{game.title}</h2>
        <p>{game.description}</p>
    </article>
</a>
