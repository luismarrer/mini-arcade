<!-- Player information and statistics panel -->
<section id="player-info" class="text-black">
    <!-- Current player data -->
    <article id="player">
        <img src="images/avatars/batman.avif" alt="Player avatar" width="100" />
        <h3 id="nick">Hero123</h3>
    </article>

    <!-- Remaining moves counter -->
    <section id="movimientos-restantes">
        <h3>Remaining moves</h3>
        <!-- The initial number depends on the selected difficulty -->
        <p aria-live="polite"></p>
    </section>

    <!-- Scoring system -->
    <section id="puntuacion">
        <h3>Score</h3>
        <!-- The score is calculated based on matches and moves -->
        <p aria-live="polite">0</p>
    </section>
</section>
