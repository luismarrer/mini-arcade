---
import Section from "@components/Section.astro"
import GameCard from "@components/GameCard.astro"
import { games } from "@/constants/games"
---

<Section>
    <ul class="flex flex-col gap-4 items-center mx-5 md:flex-row">
        {
            games.map((game) => (
                <li class="animate-fadeInUp [animation-fill-mode:both]">
                    <GameCard {game} />
                </li>
            ))
        }
    </ul>
</Section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeInUp {
        animation: fadeInUp 0.6s ease-out;
    }
</style>
