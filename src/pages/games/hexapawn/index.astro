---
import Layout from "@/layouts/Layout.astro"
---

<Layout>
    <h1>Hexapawn</h1>
    <form action="game" id="player-name-form">
        <label for="player-name"
            >Nombre del jugador:
            <input type="text" id="player-name" name="player-name" required />
        </label>
        <button>Iniciar Juego</button>
    </form>
    <script type="module" src="js/app.js"></script>
</Layout>

<style>
    /* Forms */
    form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        align-items: center;
        background: #2a2a2a;
        border: 0.125rem solid #333333;
        border-radius: 0.5rem;
        padding: 2rem;
        width: 100%;
        max-width: 25rem;
    }

    form label {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-size: 1rem;
        color: #00ff41;
        text-transform: uppercase;
        letter-spacing: 0.0625rem;
        font-weight: bold;
        text-shadow: 0 0 0.25rem #00ff41;
        width: 100%;
    }

    form input[type="text"] {
        background: #1a1a1a;
        border: 0.125rem solid #333333;
        border-radius: 40px;
        padding: 0.75rem;
        font-family: "Courier New", monospace;
        color: #ffffff;
        font-size: 1rem;
        width: 100%;
        transition:
            border-color 0.2s ease,
            box-shadow 0.2s ease;
    }

    form input[type="text"]:focus {
        outline: none;
        border-color: #00ff41;
        box-shadow: 0 0 1rem rgba(0, 255, 65, 0.3);
    }

    form button {
        background: #1a1a1a;
        color: #00ff41;
        border: 0.125rem solid #00ff41;
        padding: 0.75rem 1.5rem;
        font-family: "Courier New", monospace;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.0625rem;
        cursor: pointer;
        border-radius: 0.25rem;
        transition: all 0.2s ease;
        min-width: 8rem;
    }

    form button:hover {
        background: #00ff41;
        color: #0a0a0a;
        box-shadow: 0 0 1rem rgba(0, 255, 65, 0.3);
        transform: translateY(-0.125rem);
    }

    form button:active {
        transform: translateY(0);
    }

    form button:focus-visible {
        outline: 0.125rem solid #00ff41;
        outline-offset: 0.125rem;
    }
</style>
