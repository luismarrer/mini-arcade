---
import "./css/reset.css"
import "./css/styles.css"
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">
    <title>Hexapawn</title>
</head>
<body>
    <header>
        <a href="/"><img src="images/logo.png" alt="Logo del arcade" width="100"></a>
    </header>
    <main>
        <h1>Hexapawn</h1>
        <form action="game" id="player-name-form">
            <label for="player-name">Nombre del jugador:
                <input type="text" id="player-name" name="player-name" required>
            </label>
            <button>Iniciar Juego</button>
        </form>
    </main>
    <script type="module" src="js/app.js"></script>
</body>
</html>
