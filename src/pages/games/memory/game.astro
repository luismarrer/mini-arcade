---
import Layout from "@/layouts/Layout.astro"

import "@/styles/memory/game.css"
import "@/styles/memory/card.css"
---

<Layout>
    <!-- Player information and statistics panel -->
    <section id="player-info">
        <!-- Current player data -->
        <article id="player">
            <img
                src="images/avatars/batman.avif"
                alt="Player avatar"
                width="100"
            />
            <h3 id="nick">Hero123</h3>
        </article>

        <!-- Remaining moves counter -->
        <section id="movimientos-restantes">
            <h3>Remaining moves</h3>
            <!-- The initial number depends on the selected difficulty -->
            <p aria-live="polite"></p>
        </section>

        <!-- Scoring system -->
        <section id="puntuacion">
            <h3>Score</h3>
            <!-- The score is calculated based on matches and moves -->
            <p aria-live="polite">0</p>
        </section>
    </section>
    <!-- Main game area -->
    <section id="memory-game" class="mx-auto mt-16 bg-[#222f49]">
        <h2>Game Board</h2>

        <!-- Dynamic container for game cards -->
        <div id="memory-game-table" role="grid" aria-label="Memory card board">
            <!-- Cards are dynamically generated by JavaScript -->
        </div>

        <!-- Game controls -->
        <nav>
            <!-- Restarts the current game keeping the configuration -->
            <button id="reiniciar" type="button">Restart Game</button>
            <!-- Returns to the main menu to change configuration -->
            <button id="salir" type="button">Back to Menu</button>
        </nav>
    </section>
</Layout>
