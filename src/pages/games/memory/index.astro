---
import Layout from "@/layouts/Layout.astro"
---

<Layout>
    <form action="memory/game" class="mx-auto mt-16 bg-[#222f49]">
        <label
            >Nick
            <!-- Nick must have between 3 and 15 characters, only letters and numbers, must not start with a number -->
            <input
                type="text"
                id="nick"
                name="nick"
                required
                placeholder="Hero123"
                pattern="[a-zA-Z][a-zA-Z0-9]{2,14}"
                aria-label="Nick"
            />
        </label>
        <label
            >Difficulty
            <select name="dificultad" id="dificultad">
                <option value="baja">Low</option>
                <option value="media">Medium</option>
                <option value="alta">High</option>
            </select>
        </label>
        <label
            >Number of cards
            <select name="tarjetas" id="tarjetas">
                <!-- Even card options -->
                <option value="12">12</option>
                <option value="16">16</option>
                <option value="20">20</option>
            </select>
        </label>
        <label
            >Avatar
            <select name="avatar" id="avatar">
                <option value="batman">Batman</option>
                <option value="superman">Superman</option>
                <option value="wonder-woman">Wonder Woman</option>
                <option value="the-flash">The Flash</option>
                <option value="green-lantern">Green Lantern</option>
                <option value="supergirl">Supergirl</option>
                <option value="cyborg">Cyborg</option>
                <option value="catwoman">Catwoman</option>
            </select>
        </label>
        <label
            >Artifacts
            <select name="artefactos" id="artefactos">
                <option value="" selected>Select artifact</option>
                <option value="destapar-todas">Reveal all</option>
                <option value="mas-turnos">More turns</option>
            </select>
        </label>
        <button>Play</button>
    </form>
</Layout>

<style>
    /* Form styles */
    form {
        background-color: #222f49;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow:
            0 10px 15px -3px rgb(0 0 0 / 0.1),
            0 4px 6px -4px rgb(0 0 0 / 0.1);
        width: 100%;
        max-width: 28rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    /* Label styles */
    label {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-weight: 500;
        color: #ffffff;
        font-size: 1rem;
    }

    /* Input and select styles */
    input,
    select {
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 0.5rem;
        font-size: 1rem;
        background-color: #ffffff;
        color: #1e293b;
        transition:
            border-color 0.2s ease,
            box-shadow 0.2s ease;
    }

    input:focus,
    select:focus {
        outline: none;
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgb(37 99 235 / 0.1);
    }

    input::placeholder {
        color: #64748b;
    }

    /* Button styles */
    button {
        padding: 0.75rem 1.5rem;
        background-color: #2563eb;
        color: white;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition:
            background-color 0.2s ease,
            transform 0.1s ease;
        margin-top: 0.75rem;
    }

    button:hover {
        background-color: #1d4ed8;
        transform: translateY(-1px);
    }

    button:active {
        transform: translateY(0);
    }

    button:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgb(37 99 235 / 0.3);
    }

    /* Responsive design */
    @media (max-width: 480px) {
        body {
            padding: 0.75rem;
        }

        form {
            padding: 1.5rem;
        }

        header {
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    }
</style>
